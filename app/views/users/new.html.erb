<section class="register-index">

<header class="page-header">
  <h1>Register</h1>
</header>

<div class="row">
  <div class="col-sm-6 col-sm-offset-1">
    <%= form_for :user, url: '/users' do |form| %>
    <div class="form-group">
      <%= form.label :given_name %>
      <%= form.text_field :given_name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :surname %>
      <%= form.text_field :surname, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :email %>
      <%= form.text_field :email, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :password %>
      <%= form.text_field :password, class: 'form-control', type: 'password' %>
    </div>
    <div class="form-group">
      <%= form.label :password_confirmation %>
      <%= form.text_field :password_confirmation, class: 'form-control', type: 'password' %>
    </div>

    <%= form.submit "Submit", class: 'btn btn-primary' %>

  <% end %>
  
  </div>
</div>

</section>